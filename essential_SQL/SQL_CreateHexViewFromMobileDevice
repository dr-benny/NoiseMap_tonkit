-- Create HEX view that reads device_id from devices table
-- Usage: This view will automatically use the device with name='mobile'
CREATE OR REPLACE VIEW noise_hex_view AS
WITH device_uuid AS (
    SELECT id FROM public.devices WHERE name = 'mobile' LIMIT 1
),
bounds AS (
    SELECT 
        st_extent(noise_spatial_table.coordinate)::geometry AS g
    FROM noise_spatial_table, device_uuid
    WHERE noise_spatial_table.device_id = device_uuid.id
), 
grid AS (
    SELECT 
        st_setsrid((st_hexagongrid(0.05::double precision, bounds.g)).geom, 4326) AS geom
    FROM bounds
)
SELECT 
    row_number() OVER () AS hex_id,
    g.geom,
    count(n.*) AS n,
    min(n."time") AS t_min,
    max(n."time") AS t_max,
    10::numeric * (
        ln(avg(power(10.0::double precision, n.noise_level / 10.0::double precision))) 
        / ln(10.0)::double precision
    )::numeric(10,2) AS laeq
FROM grid g
CROSS JOIN device_uuid
LEFT JOIN noise_spatial_table n 
    ON n.device_id = device_uuid.id
   AND st_intersects(g.geom, n.coordinate)
GROUP BY g.geom;

